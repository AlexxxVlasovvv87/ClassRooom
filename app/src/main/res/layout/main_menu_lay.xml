<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFd">

    <Button
        android:id="@+id/settings_button"
        android:layout_width="55dp"
        android:layout_height="53dp"
        android:background="@drawable/ic_settings_black_24dp"
        android:fontFamily="@font/sf_pro_bold"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/play_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.297" />

    <Button
        android:id="@+id/settings_button2"
        android:layout_width="55dp"
        android:layout_height="53dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/ic_settings_black_24dp"
        android:fontFamily="@font/sf_pro_bold"
        android:onClick="openSettingsView"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/challenge_button"
        app:layout_constraintTop_toBottomOf="@+id/settings_button"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/settings_button3"
        android:layout_width="55dp"
        android:layout_height="53dp"
        android:background="@drawable/ic_settings_black_24dp"
        android:fontFamily="@font/sf_pro_bold"
        android:onClick="openSettingsView"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/play_button2"
        app:layout_constraintTop_toBottomOf="@+id/settings_button2"
        app:layout_constraintVertical_bias="0.162" />

    <Button
        android:id="@+id/info_button"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/ic_view_list_black_24dp"
        android:fontFamily="@font/sf_pro_bold"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="197dp"
        android:layout_height="210dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/play_button2"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@mipmap/box"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/challenge_button"
        android:layout_width="280dp"
        android:layout_height="72dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/play_button_challenge"
        android:fontFamily="@font/sf_pro_bold"
        android:text="@string/mathematic"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/play_button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/settings_button2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/play_button" />

    <Button
        android:id="@+id/play_button"
        android:layout_width="280dp"
        android:layout_height="72dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/button_background_play"
        android:fontFamily="@font/sf_pro_bold"
        android:text="@string/memory"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/challenge_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/settings_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="266dp"
        android:layout_height="123dp"
        app:layout_constraintBottom_toTopOf="@+id/play_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/back_text"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/play_button2"
        android:layout_width="280dp"
        android:layout_height="72dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/button_background_red"
        android:fontFamily="@font/sf_pro_bold"
        android:text="@string/soon"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/settings_button3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/challenge_button"
        app:layout_constraintVertical_bias="0.139" />

</androidx.constraintlayout.widget.ConstraintLayout>