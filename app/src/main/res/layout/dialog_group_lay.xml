<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">

    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_centerInParent="true"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="258dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:background="@drawable/background_dialog">

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="-1dp"
                android:layout_marginTop="88dp"
                android:fontFamily="@font/sf_pro_bold"
                android:text="@string/in_name_group"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/groupEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text1"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="16dp"
                android:background="@color/background_dialog"
                android:fontFamily="@font/sf_pro_font"
                android:gravity="center_horizontal"
                android:hint="@string/_"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/grey"
                android:textCursorDrawable="@color/background_dialog"
                android:textSize="23sp"
                android:visibility="visible"
                android:autofillHints=""
                tools:ignore="TextFields" />

            <Button
                android:id="@+id/deleteButton"
                android:layout_width="147dp"
                android:layout_height="58dp"
                android:layout_below="@id/groupEditText"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="57dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="54dp"
                android:background="@drawable/button_background_dialogs"
                android:text="@string/create_but"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="17sp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/only_picture"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_group_add_black_24dp"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

</RelativeLayout>