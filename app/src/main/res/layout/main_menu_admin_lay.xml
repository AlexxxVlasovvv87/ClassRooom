<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFd">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="301dp"
        android:layout_height="139dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/back_text"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/play_button"
        android:layout_width="280dp"
        android:layout_height="72dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/button_background_play"
        android:fontFamily="@font/sf_pro_bold"
        android:text="@string/teachers"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/challenge_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <Button
        android:id="@+id/challenge_button"
        android:layout_width="280dp"
        android:layout_height="72dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/play_button_challenge"
        android:fontFamily="@font/sf_pro_bold"
        android:text="@string/children"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/challenge_button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/play_button" />

    <Button
        android:id="@+id/challenge_button2"
        android:layout_width="280dp"
        android:layout_height="72dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/play_button_challenge"
        android:fontFamily="@font/sf_pro_bold"
        android:text="@string/list_of_group"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/challenge_button" />

    <Button
        android:id="@+id/info_button"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/ic_exit_to_app_black_24dp"
        android:fontFamily="@font/sf_pro_bold"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="255dp"
        android:layout_height="232dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/challenge_button2"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@mipmap/star"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>